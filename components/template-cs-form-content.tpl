:root {
  /* VoogStyle
    "pathI18n": ["custom_styles.form"],
    "titleI18n": "custom_styles.field_border",
    "editor": "listPicker",
    "list": {{ base_toggle }},
    "featured": true,
    "scope": "global"
  */
  --global-form-field-border-width: 0px;
  /* VoogStyle
    "pathI18n": ["custom_styles.form"],
    "titleI18n": "custom_styles.field_size",
    "editor": "rangePicker",
    "min": 8,
    "max": 100,
    "unit": "px",
    "scope": "global",
    "featured": true
  */
  --global-form-field-font-size: 14px;
  /* VoogStyle
    "pathI18n": ["custom_styles.form"],
    "titleI18n": "custom_styles.field_color",
    "editor": "colorPicker",
    "scope": "global",
    "featured": true
  */
  --global-form-field-color: #1b2124;
  /* VoogStyle
    "pathI18n": ["custom_styles.form"],
    "titleI18n": "custom_styles.button_padding",
    "editor": "rangePicker",
    "min": 0,
    "max": 50,
    "step": 1,
    "unit": "px",
    "scope": "global"
  */
  --global-form-button-padding: 11px;
  /* VoogStyle
    "pathI18n": ["custom_styles.form"],
    "titleI18n": "custom_styles.button_color",
    "editor": "colorPicker",
    "featured": true,
    "scope": "global"
  */
  --global-form-button-color: white;
  /* VoogStyle
    "pathI18n": ["custom_styles.form"],
    "titleI18n": "custom_styles.button_bg_color",
    "editor": "colorPicker",
    "scope": "global"
  */
  --global-form-button-background-color: #0066bb;
}
