:root {
  /* VoogStyle
    "pathI18n": ["custom_styles.main_styles"],
    "titleI18n": "custom_styles.font",
    "editor": "listPicker",
    "list": {{ base_font_set }},
    "featured": true,
    "scope": "global",
    "boundVariables": [
      "--headings-title-font-family",
      "--headings-heading-font-family",
      "--headings-subheading-font-family",
      "--content-body-font-family"
    ]
  */
  --main-font-family: "Avenir Next", Avenir, "Helvetica Neue", Helvetica, Arial, sans-serif;
  /* VoogStyle
    "pathI18n": ["custom_styles.main_styles", "custom_styles.colors"],
    "titleI18n": "custom_styles.primary_color",
    "editor": "colorPicker",
    "featured": true,
    "scope": "global",
    "boundVariables": [
      "--content-color",
      "--header-body-color",
      "--menu-main-color",
      "--menu-sub-color",
      "--content-body-color",
      "--list-color",
      "--article-box-color",
      "--footer-body-color",
      "--headings-title-color",
      "--headings-heading-color",
      "--headings-subheading-color",
      "--menu-main-border-color-active"
    ]
  */
  --main-color: #fff;
  /* VoogStyle
    "pathI18n": ["custom_styles.main_styles", "custom_styles.colors"],
    "titleI18n": "custom_styles.secondary_color",
    "editor": "colorPicker",
    "featured": true,
    "scope": "global",
    "boundVariables": [
      "--header-body-hover-color",
      "--content-link-color",
      "--form-field-color",
      "--footer-link-color"
    ]
  */
  --secondary-color: #000;
}
